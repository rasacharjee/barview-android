<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BarView">
        <attr name="barGroupSpacing" format="dimension" />
        <attr name="barHeight" format="dimension" />
        <attr name="approximateColor" format="integer" />
        <attr name="labelTextSize" format="dimension"/>
        <attr name="valueTextSize" format="dimension"/>
        <attr name="introAnimationType" format="integer">
            <enum name="none" value="0" />
            <enum name="expand" value="1" />
        </attr>
        <attr name="introAnimationDuration" format="integer" />

 
        <attr name="labelTextColor" format="color"/>
        <attr name="valueTextColor" format="color"/>
        <attr name="rippleColor" format="color"/>
        <attr name="labelFont" format="string"/>
        <attr name="valueFont" format="string"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="gradientStart" format="string"/>
        <attr name="gradientEnd" format="string"/>
        <attr name="gradientDirection" format="string"/>
 
    </declare-styleable>
</resources>